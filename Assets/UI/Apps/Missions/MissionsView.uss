.missions-root {
  flex-direction: column;
  flex-grow: 1;
  height: 100%;
  background-color: #0b0f14;
  color: #e3f2ff;
}

.missions-scroll {
  flex-grow: 1;
  overflow: hidden;
  padding: 12px;
}

.missions-content {
  flex-direction: column;
}

.missions-title {
  font-size: 16px;
  -unity-font-style: bold;
  margin-bottom: 4px;
}

.missions-description {
  font-size: 12px;
  color: #c8d8ea;
  margin-bottom: 8px;
}

.mission-reward {
  font-size: 12px;
  color: #cfe8cf;
  margin-bottom: 8px;
}

.mission-complete {
  font-size: 12px;
  color: #9ad19a;
  margin-bottom: 8px;
}

.missions-section {
  margin-bottom: 4px;
  -unity-font-style: bold;
}

.missions-objectives {
  flex-direction: column;
}

.missions-completed-header {
  margin-top: 8px;
}

.missions-completed {
  flex-direction: column;
  margin-top: 4px;
}

.mission-next-button {
  margin-top: 8px;
  margin-bottom: 4px;
}

.mission-no-more {
  color: #8aa0b8;
  margin-bottom: 4px;
}

.mission-objective {
  margin-bottom: 6px;
}

.mission-objective-complete {
  color: #8aa0b8;
}

.mission-completed-entry {
  color: #8aa0b8;
  margin-bottom: 4px;
}

.missions-root .unity-text-element {
  color: #e3f2ff;
}
